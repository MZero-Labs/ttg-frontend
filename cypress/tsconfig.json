{
  "compilerOptions": {
    "declaration": true,
    // "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "composite": true,
    "incremental": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "types": ["cypress"],
    // "target": "ES2021",
    "declarationMap": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,

    "lib": ["ES2015","ES2018", "ES2019"],
    "module": "CommonJS",
    "target": "ES2022",
    // "sourceMap": true,
    "forceConsistentCasingInFileNames": true,


    "outDir": "dist",
    "resolveJsonModule": true,
  },
  "include": ["**/*.ts"],
}